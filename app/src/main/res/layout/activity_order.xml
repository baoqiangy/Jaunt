<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="PIZZA PUB"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:src="@drawable/hawaiian_pizza" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Pub"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Time"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:text="This is the description of the Pizza Pub."
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/request_delivery"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="66dp"
        android:layout_weight="1"
        android:background="@drawable/bg_submit_btn"
        android:paddingBottom="@dimen/ef_font_small"
        android:text="Request Delivery"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>