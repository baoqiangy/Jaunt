<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppNameImageDefaultColor">
        <item name="render_color">@color/colorAccent</item>
    </style>

    <style name="AppNameImageNewColor" parent="AppNameImageDefaultColor">
        <item name="render_color">@color/colorPrimary</item>
    </style>

    <style name="JauntText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
